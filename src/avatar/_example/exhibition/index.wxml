<view class="row">
  <t-avatar-group cascading="left-up" max="5" collapseAvatar="+5" size="small" t-class-image="border-size-2">
    <t-avatar
      wx:for="{{pics}}"
      wx:for-item="pic"
      wx:key="index"
      image="{{pic}}"
      size="small"
      t-class-image="border-size-2"
      t-class="excursion-right-8"
    />
  </t-avatar-group>
</view>
